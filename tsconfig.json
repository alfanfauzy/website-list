{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ Enable JSX support
    "types": ["jest", "node", "react"], // ✅ Enable Jest globals
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src", "jest.setup.js", "src/setupTests.ts"] // ✅ Ensure test files included
}
